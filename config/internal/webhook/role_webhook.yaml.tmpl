apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRole
metadata:
  name: {{.WebhookName}}
  labels:
    app: {{.WebhookName}}
    component: data-science-pipelines
rules:
  - verbs:
      - create
      - get
      - list
      - watch
      - update
      - patch
      - delete
    apiGroups:
      - pipelines.kubeflow.org
    resources:
      - pipelines
